@import 'system'
.topMenu
    position fixed
    z-index 600
    top 0
    left 0
    right 0
    background-color primary_color 
    display grid 
    grid-template-columns 70px 1fr 70px
    grid-template-row 70px
    align-items center 
    justify-content start

    img
        width 60px
        height 60px
        vertical-align middle 
    
    a
        text-decoration none
        color default_color
        margin-left 1em 
    a:hover
        color #ffffff
        cursor pointer

